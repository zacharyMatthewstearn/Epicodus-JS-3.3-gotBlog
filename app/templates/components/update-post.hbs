{{#if addNewArticle}}
<div id="container-form" class="container">
  <form class="" action="index.html" method="post">
    <div class="form-group">
      <label for="title">Title</label>
      {{input value=title id="title"}}
    </div>
    <div class="form-group">
      <label for="subtitle">Subtitle</label>
      {{input value=subtitle id="subtitle"}}
    </div>
    <div class="form-group">
      <label for="author">Author</label>
      {{input value=author id="author"}}
    </div>
    <div class="form-group">
      <label for="date">Date</label>
      {{input value=date id="date"}}
    </div>
    <div class="form-group">
      <label for="image">Image URL</label>
      {{input value=image id="image"}}
    </div>
    <div class="form-group">
      <label for="content">Content</label>
      {{textarea value=content id="content" cols="19" rows="1"}}
    </div>
    <button {{action 'updatePost'}}class="btn" type="button" name="save">Save</button>
  </form>
</div>
{{else}}
{{/if}}
