{{#link-to 'post-expand' post.id}}
<li class="post-tile">
  <div class="inner-box">
    <div class="row">
      <div class="col-sm-6">
        <img src={{post.image}}>
      </div>
      <div class="col-sm-6">
        <h3>{{post.title}}</h3>
        <h4><em>{{post.subtitle}}</em></h4>
        <h5>By {{post.author}}, {{post.date}}</h5>
      </div>
    </div>
  </div>
</li>
{{/link-to}}
